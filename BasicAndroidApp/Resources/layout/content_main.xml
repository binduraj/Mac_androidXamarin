<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	app:layout_behavior="@string/appbar_scrolling_view_behavior"
	tools:showIn="@layout/activity_main">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="@string/mainscreenlabel"
		android:textSize="30dp"
		android:textColor="#ff06312e" />
	<EditText
		android:inputType="textEmailAddress"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/editEmail"
		android:hint="@string/emailHint" />
	<EditText
		android:inputType="textPassword"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/editPassword"
		android:hint="@string/passwordHint" />
	<Button
		android:text="@string/loginButton"
		android:layout_width="@dimen/dp217"
		android:layout_height="wrap_content"
		android:id="@+id/btnLogin"
		android:layout_gravity="center_horizontal"
		android:background="@color/gray"
		android:shadowColor="#ffe65100"
		android:shadowDx="11"
		android:shadowDy="9"
		android:shadowRadius="2" 
		/>
	<Button
		android:text="@string/secondLabel"
		android:layout_height="wrap_content"
		android:id="@+id/button1"
		android:layout_gravity="center_horizontal"
		android:layout_width="@dimen/dp218"
		/>

	<CheckBox
		android:text="@string/agreeCheck"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/checkBox1" />


</LinearLayout>